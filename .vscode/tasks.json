{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "tsc-watch",
			"type": "shell",
			"command": "tsc",
			"args": [
				"--watch",
				"--project",
				"tsconfig.json"
			],
			"problemMatcher": [
				"$tsc-watch"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				// "reveal": "never",
				"reveal": "always",
			},
			"isBackground": true,
		}
	]
}